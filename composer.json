{
    "name": "ezsystems/ezstudio-demo",
    "description": "eZ Studio distribution",
    "homepage": "https://github.com/ezsystems/ezstudio",
    "license": "TTL-2.0",
    "type": "project",
    "authors": [
        {
            "name": "eZ dev-team & eZ Community",
            "homepage": "https://github.com/ezsystems/ezstudio/contributors"
        }
    ],
    "repositories": [
        { "type": "composer", "url": "https://updates.ez.no/ttl" }
    ],
    "replace": {
        "ezsystems/ezpublish-community": "*"
    },
    "autoload": {
        "psr-0": { "": "src/" }
    },
    "require": {
        "php": "~5.6|~7.0",
        "components/handlebars.js": "~3.0.3",
        "doctrine/doctrine-bundle": "^1.9.1",
        "egulias/listeners-debug-command-bundle": "~1.9.1",
        "ezsystems/comments-bundle": "^6.1.2@dev",
        "ezsystems/content-on-the-fly-prototype": "~0.1.7@dev",
        "ezsystems/date-based-publisher": "~1.0.0@dev",
        "ezsystems/ez-support-tools": "~0.1.3@dev",
        "ezsystems/ezplatform-solr-search-engine": "^1.1@dev",
        "ezsystems/ezpublish-kernel": "~6.7.8@dev",
        "ezsystems/ezstudio-cron": "~1.0.0@dev",
        "ezsystems/ezstudio-demo-bundle": "~1.7.0@dev",
        "ezsystems/ezstudio-demo-bundle-data": "~1.7.0@dev",
        "ezsystems/ezstudio-form-builder": "~1.0.0@dev",
        "ezsystems/ezstudio-notifications": "~1.2.0@dev",
        "ezsystems/ezstudio-personalized-block": "~1.0.0@dev",
        "ezsystems/flex-workflow": "~1.7.0@dev",
        "ezsystems/landing-page-fieldtype-bundle": "~1.7.0@dev",
        "ezsystems/platform-ui-bundle": "~1.7.0@dev",
        "ezsystems/recommendation-bundle": "~1.2.0@dev",
        "ezsystems/repository-forms": "~1.5.0@dev",
        "ezsystems/share-buttons-bundle": "~1.1.0@dev",
        "ezsystems/studio-ui-bundle": "~1.7.0@dev",
        "hautelook/templated-uri-bundle": "^1.0 | ^2.1",
        "incenteev/composer-parameter-handler": "^2.1.3",
        "ramsey/uuid": "^3.8",
        "roave/security-advisories": "dev-master",
        "sensio/distribution-bundle": "^3.0.36|^4.0.6|^5.0.23",
        "sensio/framework-extra-bundle": "^3.0.29",
        "sensio/generator-bundle": "~2.3",
        "symfony/assetic-bundle": "~2.3",
        "symfony/expression-language": "~2.4",
        "symfony/monolog-bundle": "~2.4",
        "symfony/swiftmailer-bundle": "~2.3",
        "symfony/symfony": "^2.8.47",
        "tedivm/stash-bundle": "^0.6.2",
        "twig/extensions": "^1.5.3",
        "white-october/pagerfanta-bundle": "~1.0.8",
        "willdurand/js-translation-bundle": "^2.6.6"
    },
    "require-dev": {
        "behat/behat": "^3.5.0",
        "behat/mink-extension": "*",
        "behat/mink-goutte-driver": "*",
        "behat/mink-selenium2-driver": "*",
        "behat/symfony2-extension": "~2.0",
        "ezsystems/behatbundle": "^6.3",
        "jarnaiz/behat-junit-formatter": "^1.3"
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "eZ\\Bundle\\EzPublishCoreBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "eZ\\Bundle\\EzPublishCoreBundle\\Composer\\ScriptHandler::dumpAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::buildBootstrap",
            "eZ\\Bundle\\EzPublishCoreBundle\\Composer\\ScriptHandler::clearCache",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installAssets",
            "eZ\\Bundle\\EzPublishCoreBundle\\Composer\\ScriptHandler::dumpAssets",
            "Sensio\\Bundle\\DistributionBundle\\Composer\\ScriptHandler::installRequirementsFile"
        ],
        "post-create-project-cmd": [
            "eZ\\Bundle\\EzPublishCoreBundle\\Composer\\ScriptHandler::installWelcomeText"
        ]
    },
    "config": {
        "process-timeout": 3000,
        "bin-dir": "bin",
        "sort-packages": true,
        "preferred-install": {
            "ezsystems/*": "dist"
        }
    },
    "extra": {
        "symfony-app-dir": "app",
        "symfony-web-dir": "web",
        "___symfony-assets-install": "One of 'symlink', 'relative' (symlinks) or 'hard'",
        "symfony-assets-install": "relative",
        "incenteev-parameters": {
            "keep-outdated": true,
            "file": "app/config/parameters.yml"
        },
        "branch-alias": {
            "dev-master": "1.7.x-dev"
        }
    },
    "bin": [
        "bin/vhost.sh"
    ]
}
